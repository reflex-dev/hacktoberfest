/** @type {import('tailwindcss').Config} */
module.exports = {
	content: {{content|json_dumps}},
	theme: {{theme|json_dumps}},
	plugins: [
	{% for plugin in plugins %}
		require({{plugin|json_dumps}}),
	{% endfor %}
	],
	{% if presets is defined %}
	presets: [
	{% for preset in presets %}
		require({{preset|json_dumps}})
	{% endfor %}
	]
	{% endif %}
};
